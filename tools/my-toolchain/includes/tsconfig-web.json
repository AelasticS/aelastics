{
  "$schema": "http://json.schemastore.org/tsconfig",

  "compilerOptions": {
    "outDir": "../../../lib",

    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "types": [
    ],

    "module": "esnext",
    "moduleResolution": "node",
    "target": "es5",
    "lib": [
      "es5",
      "scripthost",
      "es2015.collection",
      "es2015.promise",
      "es2015.iterable",
      "dom"
    ]
  },
  "include": [
    "../../../src/**/*.ts",
  ],
  "exclude": [
    "../../../node_modules",
    "../../../lib"
  ]
}
